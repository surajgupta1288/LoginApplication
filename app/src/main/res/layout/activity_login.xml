<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bk"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Page"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:textColor="#1A7FD8"/>
    <View
        android:layout_width="250dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#1A7FD8"/>


    <EditText
        android:id="@+id/et_mail"
        android:inputType="textEmailAddress"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/bg_rectangle"
        android:textColor="#DD0449"
        android:hint="@string/et_mail_hint"/>

    <EditText
        android:id="@+id/et_password"
        android:inputType="numberPassword"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/bg_rectangle"
        android:textColor="#DD0449"
        android:hint="Enter Your Password"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_rectangle3"
        android:text="@string/btn_submit"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="115dp"
            android:text="Not Registered?"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="#060607"/>
        <TextView
            android:id="@+id/tv_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onCreateAccountClicked"
            android:text="Create An Account!"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#12DC0B"/>


    </LinearLayout>


</LinearLayout>